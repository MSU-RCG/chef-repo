# MySQL (default setup).  Versions 4.1 and 5.0 are recommended.
#
# Get the fast C bindings:
#   gem install mysql
#   (on OS X: gem install mysql -- --include=/usr/local/lib)
# And be sure to use new-style password hashing:
#   http://dev.mysql.com/doc/refman/5.0/en/old-client.html

<% case node[:redmine][:db][:type] -%>
<% when "mysql" -%>
production:
  adapter: mysql
  database: <%= node[:redmine][:db][:database] %>
  host: <%= @database_server %>
  username: <%= node[:redmine][:db][:user] %>
  password: <%= node[:redmine][:db][:password] %>
  encoding: utf8

development:
  adapter: mysql
  database: <%= node[:redmine][:db][:development][:database] %>
  host: <%= @database_server %>
  username: <%= node[:redmine][:db][:user] %>
  password: <%= node[:redmine][:db][:password] %>

test:
  adapter: mysql
  database: <%= node[:redmine][:db][:test][:database] %>
  host: <%= @database_server %>
  username: <%= node[:redmine][:db][:user] %>
  password: <%= node[:redmine][:db][:password] %>
<% when "sqlite" -%>
production:
  adapter: sqlite3
  dbfile: db/production.db
<% end -%>
